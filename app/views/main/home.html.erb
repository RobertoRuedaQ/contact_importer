<div class="container">
  <%if current_user.present? %>
  <h2>What do you need to do?</h2>
  <div class="row">
    <div class="col-md-4 col-xs-12">
      <%= link_to 'Check your contact list', contacts_path, class:"btn btn-primary btn-lg" %>
    </div>

    <div class="col-md-4 col-xs-12">
      <%= link_to 'Import contacts', new_contact_source_path, class:"btn btn-primary btn-lg" %>
    </div>

    <div class="col-md-4 col-xs-12">
      <%= link_to 'Check your batches', contact_sources_path, class:"btn btn-primary btn-lg" %>
    </div>

  </div>
  <%else%>
    <h1>Welcome to Contact Loader</h1>
    <p>Please, sign in or Register to continue</p>
  <% end %>
</div>


