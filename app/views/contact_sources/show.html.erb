<div class="container">
  <h3><%= "Batch ##{@contact_source.id}" %></h3>
  <h5><%= "Current status: #{@contact_source.status}" %></h5>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Date of Birth</th>
              <th scope="col">Telephone</th>
              <th scope="col">Address</th>
              <th scope="col">Credit Card Validation</th>
              <th scope="col">Franchise</th>
              <th scope="col">Email</th>
            </tr>
          </thead>
          <tbody>
            <% @contact_source.contacts.each do |contact| %>
            <tr>
              <td><%= contact.id %></td>
              <td><%= contact.name  %></td>
              <td><%= contact.date_of_birth  %></td>
              <td><%= contact.telephone  %></td>
              <td><%= contact.address  %></td>
              <td><%= contact.last_four  %></td>
              <td><%= contact.franchise  %></td>
              <td><%= contact.email  %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-dark">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">comments</th>
            </tr>
          </thead>
          <tbody>
            <% @contact_source.record_logs.each do |record| %>
            <tr>
              <td><%= record.id %></td>
              <td><%= record.comments  %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
